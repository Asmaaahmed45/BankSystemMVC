@model IEnumerable<Role>
@{
    ViewData["Title"] = "Roles";
}
<partial name="_RoleForm" model="new Role()" />
<h1>
    Roles
</h1>
<table class="table-striped table mt-3 w-50">
    <thead>
        <tr class="bg-primary text-white">
            <th>ID</th>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}